{
  "name": "express-react-bluprint",
  "version": "1.0.0",
  "description": "Blueprint for Express + React web app",
  "main": "index.js",
  "author": "Kevin White",
  "license": "MIT",
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.0",
    "babel-loader": "^7.1.2",
    "babel-plugin-istanbul": "^4.1.5",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-polyfill": "^6.26.0",
    "babel-preset-env": "^1.6.1",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-stage-3": "^6.24.1",
    "babel-register": "^6.26.0",
    "chai": "^4.1.2",
    "cross-env": "^5.1.3",
    "eslint": "^4.16.0",
    "eslint-config-prettier": "^2.9.0",
    "eslint-plugin-json": "^1.2.0",
    "eslint-plugin-prettier": "^2.5.0",
    "mocha": "^5.0.0",
    "morgan": "^1.9.0",
    "nock": "^9.1.6",
    "nodemon": "^1.14.12",
    "nyc": "^11.4.1",
    "prettier": "^1.10.2",
    "sinon": "^4.2.2",
    "supertest": "^3.0.0",
    "uuid": "^3.2.1",
    "webpack": "^3.10.0"
  },
  "dependencies": {
    "body-parser": "^1.18.2",
    "express": "^4.16.2",
    "request-promise-native": "^1.0.5"
  },
  "scripts": {
    "dev": "concurrently --kill-others-on-fail \"yarn server\" \"yarn client\"",
    "client": "cd client && yarn start",
    "server": "nodemon index.js --exec babel-node --presets es2015,stage-3",
    "test:lint": "eslint **/*.js --ignore-pattern node_modules/",
    "test:unit": "mocha --compilers js:babel-core/register ./server/**/*.test.js",
    "test:coverage": "cross-env NODE_ENV=test nyc mocha ./server/**/*.test.js",
    "viewcoverage": "open coverage/lcov-report/index.html"
  },
  "proxy": "http://localhost:3001/",
  "nyc": {
    "require": [
      "babel-register"
    ],
    "reporter": [
      "lcov",
      "text"
    ],
    "sourceMap": false,
    "instrument": false
  }
}
